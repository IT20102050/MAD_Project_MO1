<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_shade_1"
    android:id="@+id/idRLBSheet">


    <TextView
        android:id="@+id/idTVPaymentName"
        android:layout_width="407dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:text="Payment Name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idTVCard2"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVPaymentName"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Card No"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/idTVCard"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVPaymentName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Card No"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="0dp" />

    <TextView
        android:id="@+id/idTVPhone2"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVCard"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Phone No"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/idTVPhone"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVCard"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Phone No"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="1dp" />

    <TextView
        android:id="@+id/idTVPlace2"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVPhone"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Location Type"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/idTVPlace"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVPhone"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Location Type"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="1dp" />

    <TextView
        android:id="@+id/idTVAddress2"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVPlace"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Address"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="4dp" />

    <TextView
        android:id="@+id/idTVAddress"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVPlace"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="Address"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="95dp"
        android:layout_marginRight="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@id/idTVAddress">

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:text="Edit Item"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:id="@+id/idBtnEdit"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:text="Submit Order"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:id="@+id/idBtnContinue"/>


    </LinearLayout>

</RelativeLayout>